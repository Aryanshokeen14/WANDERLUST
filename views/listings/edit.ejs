<% layout('/layouts/boilerplate') -%>
<br />
<div class="row">
  <div class="col-8">
    <h3>edit ur listings</h3>
    <form
      method="POST"
      action="/listings/<%= listings._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listings[title]"
          value="<%=listings.title%>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">badiya nhi lag rha</div>
        <div class="valid-feedback">badiya lag rha hai</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          name="listings[description]"
          class="form-control"
          required
        >
<%=listings.description%></textarea
        >
        <div class="invalid-feedback">badiya nhi lag rha</div>
        <div class="valid-feedback">badiya lag rha hai</div>
      </div>
      <div class="mb-3">
        Original listing image
        <img src="<%= originalimageurl %>" alt="">
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input
          type="file"
          name="listings[image]"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listings[price]"
            value="<%=listings.price%>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">badiya nhi lag rha</div>
          <div class="valid-feedback">badiya lag rha hai</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listings[country]"
            value="<%=listings.country%>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">badiya nhi lag rha</div>
          <div class="valid-feedback">badiya lag rha hai</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listings[location]"
          value="<%=listings.location%>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">badiya nhi lag rha</div>
        <div class="valid-feedback">badiya lag rha hai</div>
      </div>

      <button class="btn btn-dark edit-btn">edit</button>
      <br /><br />
    </form>
  </div>
</div>
